{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src/",
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "./dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["jest", "node"]
  },
  "include" :  [ "src/**/*.ts" ,  "tests/**/*.test.ts" ],
  "exclude": [ "node_modules" ],
  "ts-node": { "transpileOnly": true }
}